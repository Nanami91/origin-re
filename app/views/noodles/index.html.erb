<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「人生を変えるフリマアプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      手軽に今日のラーメン探し
    </h2>
    <p class='service-explain'>
      Noodlesはだれでも簡単に
    </p>
    <p class='service-explain'>
      ラーメンの情報を共有できるアプリです
    </p>
    <div class='store-btn'>
      <%= link_to image_tag("https://linkmaker.itunes.apple.com/ja-jp/badge-lrg.svg?releaseDate=2011-09-21&kind=iossoftware&bubble=ios_apps", class:"apple-btn"), "#" %>
      <%#= link_to image_tag("dl-android.png", class:"google-btn"), "#" %>
    </div>
  </div>
  <%# /画面上部の「人生を変えるフリマアプリ」帯部分  %>


  <%# 画面中央の「会員数日本一位」帯部分 %>
  <div class='ad-contents'>
    <h2 class='ad-title'>
      会員数日本一位
    </h2>
    <p class='ad-explain'>
      Noodlesは、ラーメンアプリで最も人気。
    </p>
    <p class='ad-explain'>
      食べてみたいラーメンに出会えるかもしれません。
    </p>
    <div class='store-btn'>
      <%= link_to image_tag("https://linkmaker.itunes.apple.com/ja-jp/badge-lrg.svg?releaseDate=2011-09-21&kind=iossoftware&bubble=ios_apps", class:"apple-btn"), "#" %>
      <%#= link_to image_tag("dl-android.png", class:"google-btn"), "#" %>
    </div>
  </div>
  <%# /画面中央の「会員数日本一位」帯部分 %>

  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>ピックアップラーメン</h2>
    <%= link_to '新規投稿商品', "#", class: "subtitle" %>
    <ul class='item-lists'>

     <% @noodles.each do |noodle| %>
      <li class='list'>
        <%= link_to noodles_path(noodle.id), method: :get do %>
        <div class='item-img-content'>
          <%= image_tag noodle.image, class: "item-img" %>

        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= noodle.store_name %>
          </h3>
          <div class='star-btn'>
            <%#= noodle.prefecture.name %>
          </div>
        </div>
       <% end %>
      </li>
    <% end %>

      <% if @noodles.blank? %>
      <li class='list'>
        <%#= link_to '#' do %>
        <%#= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            商品を出品してね！
          </h3>
          <div class='item-price'>
            <span>99999999円<br>(税込み)</span>
            <div class='star-btn'>
              <%#= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
    </ul>
  </div>
  <%# /商品一覧 %>
</div>

  <%= link_to(new_noodle_path, class: 'purchase-btn') do %>
    <span class='purchase-btn-text'>投稿する</span>
   <%= image_tag 'post-ramen.jpg' , size: '185x50' ,class: "purchase-btn-icon" %>
  <% end %>
<%= render "shared/footer" %>